<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Numero2"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="0"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Numero1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BottoneDifferenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="differenza"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/Numero2"
        app:layout_constraintStart_toStartOf="@+id/Numero2"
        app:layout_constraintTop_toBottomOf="@+id/Numero2" />

    <EditText
        android:id="@+id/Numero1"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="0"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/Numero2"
        app:layout_constraintEnd_toStartOf="@+id/Numero2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BottoneSomma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="49dp"
        android:text="somma"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Numero1" />

    <TextView
        android:id="@+id/Risultato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="48dp"
        android:text="output:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/BottoneDifferenza"
        app:layout_constraintStart_toStartOf="@+id/BottoneSomma"
        app:layout_constraintTop_toBottomOf="@+id/BottoneSomma" />

</androidx.constraintlayout.widget.ConstraintLayout>